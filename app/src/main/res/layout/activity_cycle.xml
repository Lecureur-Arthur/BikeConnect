<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Grid for Data Fields -->
    <GridLayout
        android:id="@+id/dataGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:columnCount="2"
        android:padding="10dp"
        android:columnOrderPreserved="false"
        android:orientation="horizontal">

        <!-- Speed -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_speed"
                android:contentDescription="Speed Icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/speedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Speed\n30.2 Km/h"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Distance Covered -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_distance"
                android:contentDescription="Distance Icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/distanceCoveredTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Distance covered\n111.1 Km"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Distance Left -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_distance_left"
                android:contentDescription="Distance Left Icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/distanceLeftTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Distance left\n888.8 Km"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Ride Time -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_ride_time"
                android:contentDescription="Ride Time Icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/rideTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Ride time\n3h 20 min"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Heart Rate -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Heart Rate Icon"
                android:src="@drawable/ic_heart_rate" />

            <TextView
                android:id="@+id/heartRateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Heart Rate\n111 BPM"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Altitude -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_altitude"
                android:contentDescription="Altitude Icon"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/altitudeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Altitude\n200 m"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <!-- Map View -->
    <ImageView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#B0BEC5"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lemans" />

    <!-- Retour Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/retourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:textSize="16sp"
            android:background="@drawable/rounded_background"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</LinearLayout>
